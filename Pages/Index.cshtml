@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    
    // Live Data from Model
    int pendingCount = Model.PendingCount; 
    int expiringCount = Model.ExpiringCount;
}

<div class="row mb-4">
    <!-- 1. Total Requests -->
    <div class="col-lg-3 col-6">
        <div class="small-box">
            <div class="inner">
                <h3>@Model.TotalRequests</h3>
                <p>Total Requests</p>
            </div>
            <div class="icon">
                <i data-lucide="file-text"></i>
            </div>
            <a href="/Requests/Index" class="small-box-footer">
                View All <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>
    
    <!-- 2. Active Certifications -->
    <div class="col-lg-3 col-6">
        <div class="small-box">
            <div class="inner">
                <h3>@Model.ActiveCertifications.ToString("N0")</h3>
                <p>Active Certifications</p>
            </div>
            <div class="icon">
                <i data-lucide="award"></i>
            </div>
            <a href="/Certifications/Index?StatusFilter=Active" class="small-box-footer">
                View Active <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>

    <!-- 3. Pending Approvals -->
    <!-- 3. Pending Approvals -->
    <div class="col-lg-3 col-6">
        <!-- Conditional Formatting: Only show 'status-warning' if count > 0 -->
        <div class="small-box @(pendingCount > 0 ? "status-warning" : "")">
            <div class="inner">
                <h3>@pendingCount</h3>
                <p>Pending Approvals</p>
            </div>
            <div class="icon">
                <i data-lucide="hourglass"></i>
            </div>
            <a href="/Requests/Index?StatusFilter=Pending" class="small-box-footer">
                View Pending <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>
    
    <!-- 4. Expiring Soon -->
    <div class="col-lg-3 col-6">
        <!-- Conditional Formatting: Only show 'status-danger' if count > 0 -->
        <div class="small-box @(expiringCount > 0 ? "status-danger" : "")">
            <div class="inner">
                <h3>@expiringCount</h3>
                <p>Expiring Soon</p>
            </div>
            <div class="icon">
                <i data-lucide="alert-triangle"></i>
            </div>
            <a href="/Certifications/Index?StatusFilter=ExpiringSoon" class="small-box-footer">
                View Expiring <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>
</div>

<!-- Recent Requests Table -->
<div class="card">
    <div class="card-header d-flex align-items-center bg-white border-0">
        <h3 class="card-title">Recent Requests</h3>
        <div class="card-tools ms-auto d-flex gap-3 align-items-center">
             <form method="get" id="dashboardControlsForm" class="d-flex gap-2 align-items-center m-0">
                <div class="d-flex align-items-center">
                    <label class="me-2 text-muted small fw-bold mb-0">SHOW:</label>
                    <select name="PageSize" class="form-select form-select-sm" style="width: 70px;" onchange="this.form.submit()">
                        <option value="5" selected="@(Model.PageSize == 5)">5</option>
                        <option value="10" selected="@(Model.PageSize == 10)">10</option>
                        <option value="15" selected="@(Model.PageSize == 15)">15</option>
                        <option value="25" selected="@(Model.PageSize == 25)">25</option>
                    </select>
                </div>
                <div class="input-group input-group-sm">
                    <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search..." style="max-width: 150px;">
                    <button class="btn btn-brand" type="submit">
                        <i data-lucide="search" class="text-white" style="width: 14px;"></i>
                    </button>
                </div>
            </form>
            <a href="/Requests/Index" class="btn btn-tool btn-sm text-primary fw-bold">
                <i data-lucide="plus-circle" class="me-1" style="width: 16px;"></i> New Request
            </a>
        </div>
    </div>
    <div class="card-body table-responsive p-0" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="bg-light">
            <tr>
                <th>Req ID</th>
                <th>Employee</th>
                <th>Manager</th> <!-- Added Manager -->
                <th>Agency</th> 
                <th>Certification</th> 
                <th>Type</th>
                <th class="text-center">Status</th>
                <th>Request Date</th> <!-- Renamed Date -->
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.RecentRequests)
            {
                <tr>
                    <td><span class="text-muted">REQ-@item.Id</span></td>
                    <td>
                        <span class="fw-bold">@item.Employee?.DisplayName</span>
                    </td>
                    <td>@(item.ManagerName ?? "N/A")</td>
                    <td>@(item.Agency?.Abbreviation ?? item.CustomAgencyName ?? "Custom")</td>
                    <td>@(item.Certification?.Name ?? item.CustomCertificationName ?? "Custom")</td>
                    <td><span class="fw-bold">@item.RequestType</span></td>
                    <td class="text-center">
                        @if (item.Status == SeHrCertificationPortal.Models.RequestStatus.Pending)
                        {
                            <span class="badge text-bg-warning d-inline-flex align-items-center"><i data-lucide="clock" class="me-1" style="width: 12px; height: 12px;"></i> Pending</span>
                        }
                        else if (item.Status == SeHrCertificationPortal.Models.RequestStatus.Approved || item.Status == SeHrCertificationPortal.Models.RequestStatus.Passed)
                        {
                            <span class="badge text-bg-success d-inline-flex align-items-center"><i data-lucide="check-circle" class="me-1" style="width: 12px; height: 12px;"></i> @item.Status</span>
                        }
                        else
                        {
                            <span class="badge text-bg-danger d-inline-flex align-items-center"><i data-lucide="x-circle" class="me-1" style="width: 12px; height: 12px;"></i> @item.Status</span>
                        }
                    </td>
                    <td>@item.RequestDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="/Requests/Index?SearchString=@(item.Employee?.DisplayName ?? "")" class="btn btn-sm btn-outline-brand fw-bold d-inline-flex align-items-center">
                            <i data-lucide="settings" class="me-1" style="width: 14px; height: 14px;"></i> Manage
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>

