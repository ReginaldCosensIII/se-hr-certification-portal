@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
    
    // Live Data from Model
    int pendingCount = Model.PendingCount; 
    int expiringCount = Model.ExpiringCount;
}

<div class="row mb-4">
    <!-- 1. Total Requests -->
    <div class="col-lg-3 col-6">
        <div class="small-box">
            <div class="inner">
                <h3>@Model.TotalRequests</h3>
                <p>Total Requests</p>
            </div>
            <div class="icon">
                <i data-lucide="file-text"></i>
            </div>
            <a href="/Requests/Index" class="small-box-footer">
                View All <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>
    
    <!-- 2. Active Certifications -->
    <div class="col-lg-3 col-6">
        <div class="small-box">
            <div class="inner">
                <h3>@Model.ActiveCertifications.ToString("N0")</h3>
                <p>Active Certifications</p>
            </div>
            <div class="icon">
                <i data-lucide="award"></i>
            </div>
            <a href="/Certifications/Index?status=Active" class="small-box-footer">
                View Active <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>

    <!-- 3. Pending Approvals -->
    <!-- 3. Pending Approvals -->
    <div class="col-lg-3 col-6">
        <!-- Conditional Formatting: Only show 'status-warning' if count > 0 -->
        <div class="small-box @(pendingCount > 0 ? "status-warning" : "")">
            <div class="inner">
                <h3>@pendingCount</h3>
                <p>Pending Approvals</p>
            </div>
            <div class="icon">
                <i data-lucide="hourglass"></i>
            </div>
            <a href="/Requests/Index?status=Pending" class="small-box-footer">
                View Pending <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>
    
    <!-- 4. Expiring Soon -->
    <div class="col-lg-3 col-6">
        <!-- Conditional Formatting: Only show 'status-danger' if count > 0 -->
        <div class="small-box @(expiringCount > 0 ? "status-danger" : "")">
            <div class="inner">
                <h3>@expiringCount</h3>
                <p>Expiring Soon</p>
            </div>
            <div class="icon">
                <i data-lucide="alert-triangle"></i>
            </div>
            <a href="/Certifications/Index?filter=expiring" class="small-box-footer">
                View Expiring <i data-lucide="arrow-right-circle"></i>
            </a>
        </div>
    </div>
</div>

<!-- Recent Requests Table -->
<div class="card">
    <div class="card-header d-flex align-items-center bg-white border-0">
        <h3 class="card-title">Recent Requests</h3>
        <div class="card-tools ms-auto d-flex gap-2">
             <!-- Search Bar (Added) -->
             <form method="get" class="d-flex align-items-center">
                <div class="input-group input-group-sm">
                    <input type="text" name="SearchString" class="form-control" placeholder="Search..." style="max-width: 150px;">
                        <button class="btn btn-brand" type="submit">
                        <i data-lucide="search" class="text-white" style="width: 14px;"></i>
                    </button>
                </div>
            </form>

            <!-- New Request Action Only -->
            <a href="/Requests/Create" class="btn btn-tool btn-sm text-primary fw-bold">
                <i data-lucide="plus-circle" class="me-1"></i> New Request
            </a>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="bg-light">
            <tr>
                <th>Req ID</th>
                <th>Employee</th>
                <th>Manager</th> <!-- Added Manager -->
                <th>Agency</th> 
                <th>Certification</th> 
                <th>Type</th>
                <th>Status</th>
                <th>Request Date</th> <!-- Renamed Date -->
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.RecentRequests)
            {
                <tr>
                    <td><span class="text-muted">REQ-@item.Id</span></td>
                    <td>
                        <span class="fw-bold">@item.Employee?.DisplayName</span>
                        <br/>
                        <small class="text-muted" style="font-size: 0.75rem;">@(item.Employee?.Email ?? "No Email")</small>
                    </td>
                    <td>@(item.ManagerName ?? "N/A")</td>
                    <td>@(item.Agency?.Abbreviation ?? item.CustomAgencyName ?? "Custom")</td>
                    <td>@(item.Certification?.Name ?? item.CustomCertificationName ?? "Custom")</td>
                    <td><span class="fw-bold">@item.RequestType</span></td>
                    <td>
                        @if (item.Status == SeHrCertificationPortal.Models.RequestStatus.Pending)
                        {
                            <span class="badge text-bg-warning">Pending</span>
                        }
                        else if (item.Status == SeHrCertificationPortal.Models.RequestStatus.Approved)
                        {
                            <span class="badge text-bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge text-bg-danger">Rejected</span>
                        }
                    </td>
                    <td>@item.RequestDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="#" class="text-muted me-2" title="View">
                            <i data-lucide="search" style="width: 16px; height: 16px;"></i>
                        </a>
                        <a href="#" class="text-muted me-2" title="Edit">
                            <i data-lucide="pencil" style="width: 16px; height: 16px;"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-transparent border-top-0 py-3">
        <!-- Pagination Mock -->
        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm justify-content-end mb-0">
                <li class="page-item disabled"><a class="page-link" href="#" aria-label="Previous">Previous</a></li>
                <li class="page-item active"><a class="page-link shadow-sm" href="#">1</a></li>
                <li class="page-item disabled"><a class="page-link text-muted" href="#">2</a></li>
                <li class="page-item disabled"><a class="page-link text-muted" href="#">3</a></li>
                <li class="page-item disabled"><a class="page-link" href="#" aria-label="Next">Next</a></li>
            </ul>
        </nav>
    </div>
</div>

