                    <td>
                        <a href="#" class="btn btn-sm btn-info">View</a>
                        <a href="#" class="btn btn-sm btn-success">Approve</a>
                    </td>
                </tr>
                <tr>
                    <td>2.</td>
                    <td>Jane Smith</td>
                    <td>PMP Certification</td>
                    <td><span class="badge text-bg-success">Approved</span></td>
                    <td>2023-09-28</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-info">View</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
