        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Employee</th>
                    <th>Certification</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th style="width: 150px">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1.</td>
                    <td>John Doe</td>
                    <td>AWS Certified Solutions Architect</td>
                    <td><span class="badge text-bg-warning">Pending</span></td>
