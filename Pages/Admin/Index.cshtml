@section Scripts {
    <script>
class ClientSideDataGrid {
class ClientSideDataGrid {
    constructor(containerId, defaultRowsPerPage = 25) {
        this.container = document.getElementById(containerId);
        if (!this.container) return;

        this.searchInput = this.container.querySelector('.grid-search-input');
        this.searchBtn = this.container.querySelector('.grid-search-btn');
        this.filterSelect = this.container.querySelector('.grid-filter-select');
        this.clearBtn = this.container.querySelector('.grid-clear-btn');
        this.perPageSelect = this.container.querySelector('.grid-per-page');
        this.tableBody = this.container.querySelector('table tbody');
        this.rows = Array.from(this.tableBody.querySelectorAll('tr'));
        this.paginationContainer = this.container.querySelector('.grid-pagination');
        
        this.rowsPerPage = defaultRowsPerPage;
        this.currentPage = 1;
        this.filteredRows = [...this.rows];

        this.activeSearchTerm = '';
        this.activeFilterVal = '';

        if(this.perPageSelect) this.perPageSelect.value = this.rowsPerPage;

        this.init();
    }

    init() {
        if (this.searchBtn && this.searchInput) {
            this.searchBtn.addEventListener('click', () => this.applyFilters());
            this.searchInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    this.applyFilters();
                }
            });
        }

        if (this.filterSelect) {
            this.filterSelect.addEventListener('change', () => this.applyFilters());
        }

        if (this.clearBtn) {
            this.clearBtn.addEventListener('click', () => this.clearFilters());
        }

        if (this.perPageSelect) {
            this.perPageSelect.addEventListener('change', (e) => {
                this.rowsPerPage = parseInt(e.target.value);
                this.currentPage = 1;
                this.render();
            });
        }
        this.render();
    }

    applyFilters() {
        this.activeSearchTerm = this.searchInput ? this.searchInput.value.toLowerCase().trim() : '';
        this.activeFilterVal = this.filterSelect ? this.filterSelect.value.toLowerCase() : '';
        this.executeFilter();
    }

    clearFilters() {
        if (this.searchInput) this.searchInput.value = '';
        if (this.filterSelect) this.filterSelect.value = '';
        this.activeSearchTerm = '';
        this.activeFilterVal = '';
        this.executeFilter();
    }

    executeFilter() {
        this.filteredRows = this.rows.filter(row => {
            const text = row.innerText.toLowerCase();
            const matchesSearch = this.activeSearchTerm === '' || text.includes(this.activeSearchTerm);
            const matchesFilter = this.activeFilterVal === '' || text.includes(this.activeFilterVal);
            return matchesSearch && matchesFilter;
        });

        if (this.clearBtn) {
            if (this.activeSearchTerm !== '' || this.activeFilterVal !== '') {
                this.clearBtn.classList.remove('d-none');
            } else {
                this.clearBtn.classList.add('d-none');
            }
        }

        this.currentPage = 1;
        this.render();
    }

    render() {
        this.rows.forEach(row => row.style.display = 'none');
        const totalPages = Math.ceil(this.filteredRows.length / this.rowsPerPage) || 1;
        if (this.currentPage > totalPages) this.currentPage = totalPages;
        const start = (this.currentPage - 1) * this.rowsPerPage;
        const end = start + this.rowsPerPage;
        const pageRows = this.filteredRows.slice(start, end);
        pageRows.forEach(row => row.style.display = '');
        this.renderPagination(totalPages);
        if(window.lucide) { window.lucide.createIcons(); } // Refresh icons if DOM changes
    }

    renderPagination(totalPages) {
        if(!this.paginationContainer) return;
        let html = '';
        html += `<li class="page-item ${this.currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link shadow-sm" href="javascript:void(0)" data-page="${this.currentPage - 1}">&laquo;</a>
                 </li>`;
        html += `<li class="page-item active">
                    <span class="page-link shadow-sm border-brand bg-brand text-white" style="pointer-events: none;">${this.currentPage} / ${totalPages}</span>
                 </li>`;
        html += `<li class="page-item ${this.currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link shadow-sm" href="javascript:void(0)" data-page="${this.currentPage + 1}">&raquo;</a>
                 </li>`;
        this.paginationContainer.innerHTML = html;
        this.paginationContainer.querySelectorAll('a.page-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const parentLi = e.target.closest('.page-item');
                if (!parentLi.classList.contains('disabled')) {
                    this.currentPage = parseInt(e.target.getAttribute('data-page'));
                    this.render();
                }
            });
        });
    }
}

