@page
@model SeHrCertificationPortal.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Admin Management";
}

<!-- Admin Management Tabs -->
<ul class="nav nav-tabs admin-tabs" id="adminTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="agencies-tab" data-bs-toggle="tab" data-bs-target="#agencies" type="button" role="tab" aria-controls="agencies" aria-selected="true">
            <i data-lucide="building-2" class="me-2" style="width: 18px;"></i> Agencies
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="certifications-tab" data-bs-toggle="tab" data-bs-target="#certifications" type="button" role="tab" aria-controls="certifications" aria-selected="false">
            <i data-lucide="award" class="me-2" style="width: 18px;"></i> Certifications
        </button>
    </li>
</ul>

<div class="tab-content mb-5" id="adminTabsContent">
    <!-- Agency Management Tab -->
    <div class="tab-pane fade show active" id="agencies" role="tabpanel" aria-labelledby="agencies-tab">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h5 class="card-title fw-bold mb-0 text-dark">
                    Manage Agencies
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-brand fw-bold">
                        <i data-lucide="download" class="me-1" style="width: 14px;"></i> Export List
                    </button>
                    <button class="btn btn-sm btn-brand fw-bold text-white">
                        <i data-lucide="plus" class="me-1" style="width: 14px;"></i> Add Agency
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-3" style="width: 60px;">ID</th>
                                <th>Name</th>
                                <th class="text-center" style="width: 120px;">Contact Person</th>
                                <th class="text-center" style="width: 100px;">Status</th>
                                <th class="text-end pe-3" style="width: 100px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.Agency) {
                            <tr>
                                <td class="ps-3 text-muted">@item.Id</td>
                                <td class="fw-bold">@item.FullName (@item.Abbreviation)</td>
                                <td class="text-center text-muted">@(item.Certifications.Count) Certifications</td>
                                <td class="text-center"><span class="badge text-bg-success">Active</span></td>
                                <td class="text-end pe-3">
                                    <button class="btn btn-sm btn-link text-muted p-0"><i data-lucide="more-horizontal" style="width: 16px;"></i></button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Certification Management Tab -->
    <div class="tab-pane fade" id="certifications" role="tabpanel" aria-labelledby="certifications-tab">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                 <h5 class="card-title fw-bold mb-0 text-dark">
                    Manage Certifications
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-brand fw-bold">
                        <i data-lucide="download" class="me-1" style="width: 14px;"></i> Export List
                    </button>
                    <button class="btn btn-sm btn-brand fw-bold text-white">
                        <i data-lucide="plus" class="me-1" style="width: 14px;"></i> Add Certification
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-3">Certification Name</th>
                                <th>Issuing Agency</th>
                                <th>Validity Period</th>
                                <th>Requires Renewal?</th>
                                <th class="text-end pe-3" style="width: 80px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="ps-3 fw-bold">Concrete Field Testing Grade I</td>
                                <td>ACI</td>
                                <td>5 Years</td>
                                <td><i data-lucide="check" class="text-success" style="width: 16px;"></i> Yes</td>
                                <td class="text-end pe-3">
                                    <button class="btn btn-sm btn-link text-muted p-0"><i data-lucide="edit-2" style="width: 16px;"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td class="ps-3 fw-bold">Soils & Aggregate Compaction</td>
                                <td>WACEL</td>
                                <td>3 Years</td>
                                <td><i data-lucide="check" class="text-success" style="width: 16px;"></i> Yes</td>
                                <td class="text-end pe-3">
                                    <button class="btn btn-sm btn-link text-muted p-0"><i data-lucide="edit-2" style="width: 16px;"></i></button>
                                </td>
                            </tr>
                             <tr>
                                <td class="ps-3 fw-bold">Concrete Strength Testing</td>
                                <td>ACI</td>
                                <td>5 Years</td>
                                <td><i data-lucide="check" class="text-success" style="width: 16px;"></i> Yes</td>
                                <td class="text-end pe-3">
                                    <button class="btn btn-sm btn-link text-muted p-0"><i data-lucide="edit-2" style="width: 16px;"></i></button>
                                </td>
                            </tr>
                             <tr>
                                <td class="ps-3 fw-bold">OSHA 10-Hour Construction</td>
                                <td>OSHA</td>
                                <td>Permanent</td>
                                <td><i data-lucide="x" class="text-muted" style="width: 16px;"></i> No</td>
                                <td class="text-end pe-3">
                                    <button class="btn btn-sm btn-link text-muted p-0"><i data-lucide="edit-2" style="width: 16px;"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- General Settings -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm border-0 bg-white">
            <div class="card-body d-flex align-items-center justify-content-between py-4">
               <div class="d-flex align-items-center">
                   <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                       <i data-lucide="settings" class="text-muted"></i>
                   </div>
                   <div>
                       <h5 class="fw-bold mb-1">General Settings</h5>
                       <p class="text-muted small mb-0">Configure system-wide notifications and contacts.</p>
                   </div>
               </div>
               
               <div class="d-flex align-items-center gap-3">
                   <div class="input-group">
                       <span class="input-group-text bg-light border-end-0"><i data-lucide="mail" style="width: 16px;" class="text-muted"></i></span>
                       <input type="email" class="form-control" placeholder="Admin Email" value="admin@specializedengineering.com" style="min-width: 300px;">
                   </div>
                   <button class="btn btn-brand fw-bold px-4">Save</button>
               </div>
            </div>
        </div>
    </div>
</div>
