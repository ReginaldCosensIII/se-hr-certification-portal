@page
@model SeHrCertificationPortal.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Admin Management";
}

<!-- Admin Management Tabs -->
<ul class="nav nav-tabs admin-tabs" id="adminTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="agencies-tab" data-bs-toggle="tab" data-bs-target="#agencies" type="button" role="tab" aria-controls="agencies" aria-selected="true">
            <i data-lucide="building-2" class="me-2" style="width: 18px;"></i> Agencies
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="certifications-tab" data-bs-toggle="tab" data-bs-target="#certifications" type="button" role="tab" aria-controls="certifications" aria-selected="false">
            <i data-lucide="award" class="me-2" style="width: 18px;"></i> Certifications
        </button>
    </li>
</ul>

<div class="tab-content mb-5" id="adminTabsContent">
    <!-- Agency Management Tab -->
    <div class="tab-pane fade show active" id="agencies" role="tabpanel" aria-labelledby="agencies-tab">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h5 class="card-title fw-bold mb-0 text-dark">
                    Manage Agencies
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-brand fw-bold">
                        <i data-lucide="download" class="me-1" style="width: 14px;"></i> Export List
                    </button>
                    <button class="btn btn-sm btn-brand fw-bold text-white" data-bs-toggle="modal" data-bs-target="#addAgencyModal">
                        <i data-lucide="plus" class="me-1" style="width: 14px;"></i> Add Agency
                    </button>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="custom-data-grid" id="agencyGridContainer">
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <div class="input-group input-group-sm" style="max-width: 250px;">
                                    <input type="text" class="form-control grid-search-input" placeholder="Search agencies...">
                                    <button class="btn btn-brand grid-search-btn" type="button">
                                        <i data-lucide="search" class="text-white" style="width: 14px;"></i>
                                    </button>
                                </div>
                                <button class="btn btn-outline-brand btn-sm grid-clear-btn d-none d-flex align-items-center" type="button" title="Clear Filters">
                                    <i data-lucide="x" style="width: 14px;"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0" id="agencyTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3" style="width: 60px;">ID</th>
                                    <th>Name</th>
                                    <th class="text-center" style="width: 170px;">Active Certifications</th>
                                    <th class="text-center" style="width: 100px;">Status</th>
                                    <th class="text-center" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Agency) {
                                <tr>
                                    <td class="ps-3 text-muted">@item.Id</td>
                                    <td class="fw-bold">@item.FullName (@item.Abbreviation)</td>
                                    <td class="text-center text-muted">@(item.Certifications.Count) Certifications</td>
                                    <td class="text-center"><span class="badge text-bg-success">Active</span></td>
                                    <td class="text-center border-start">
                                        <a href="javascript:void(0)" class="text-primary text-decoration-none me-2 edit-agency-btn" 
                                           data-id="@item.Id" 
                                           data-name="@item.FullName" 
                                           data-abbreviation="@item.Abbreviation"
                                           title="Edit Agency">
                                            <i data-lucide="edit" style="width: 18px; height: 18px;"></i>
                                        </a>
                                        <a href="javascript:void(0)" class="text-danger text-decoration-none deactivate-agency-btn" 
                                           data-id="@item.Id" 
                                           data-name="@item.FullName" 
                                           title="Deactivate Agency">
                                            <i data-lucide="trash-2" style="width: 18px; height: 18px;"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer bg-transparent border-top-0 py-3 mt-3 px-0">
                        <nav aria-label="Page navigation" class="d-flex justify-content-end align-items-center gap-3">
                            <label class="mb-0 text-muted small">
                                Show 
                                <select class="form-select form-select-sm d-inline-block w-auto mx-1 shadow-sm grid-per-page">
                                    <option value="10">10</option>
                                    <option value="25" selected>25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select> entries
                            </label>
                            <ul class="pagination pagination-sm mb-0 grid-pagination">
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Certification Management Tab -->
    <div class="tab-pane fade" id="certifications" role="tabpanel" aria-labelledby="certifications-tab">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                 <h5 class="card-title fw-bold mb-0 text-dark">
                    Manage Certifications
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-brand fw-bold">
                        <i data-lucide="download" class="me-1" style="width: 14px;"></i> Export List
                    </button>
                    <button class="btn btn-sm btn-brand fw-bold text-white" data-bs-toggle="modal" data-bs-target="#addCertificationModal">
                        <i data-lucide="plus" class="me-1" style="width: 14px;"></i> Add Certification
                    </button>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="custom-data-grid" id="certGridContainer">
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="d-flex gap-2 justify-content-end">
                                <div class="input-group input-group-sm" style="max-width: 250px;">
                                    <input type="text" class="form-control grid-search-input" placeholder="Search certifications...">
                                    <button class="btn btn-brand grid-search-btn" type="button">
                                        <i data-lucide="search" class="text-white" style="width: 14px;"></i>
                                    </button>
                                </div>
                                <select class="form-select form-select-sm grid-filter-select" style="max-width: 200px;">
                                    <option value="">All Agencies</option>
                                    @foreach(var agency in Model.Agency) {
                                        <option value="@agency.Abbreviation">@agency.Abbreviation</option>
                                    }
                                </select>
                                <button class="btn btn-outline-brand btn-sm grid-clear-btn d-none d-flex align-items-center" type="button" title="Clear Filters">
                                    <i data-lucide="x" style="width: 14px;"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0" id="certTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">Certification Name</th>
                                    <th>Issuing Agency</th>
                                    <th>Validity Period</th>
                                    <th>Requires Renewal?</th>
                                    <th class="text-center" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var cert in Model.Certifications) {
                                <tr>
                                    <td class="ps-3 fw-bold">@cert.Name</td>
                                    <td>@(cert.Agency?.Abbreviation ?? "Unknown")</td>
                                    <td>
                                        @if (cert.ValidityPeriodMonths == 0) {
                                            <text>Permanent</text>
                                        } else if (cert.ValidityPeriodMonths % 12 == 0) {
                                            <text>@(cert.ValidityPeriodMonths / 12) Years</text>
                                        } else {
                                            <text>@cert.ValidityPeriodMonths Months</text>
                                        }
                                    </td>
                                    <td>
                                        @if (cert.ValidityPeriodMonths > 0) {
                                            <i data-lucide="check" class="text-success" style="width: 16px;"></i> <text>Yes</text>
                                        } else {
                                            <i data-lucide="x" class="text-muted" style="width: 16px;"></i> <text>No</text>
                                        }
                                    </td>
                                    <td class="text-center border-start">
                                        <a href="javascript:void(0)" class="text-primary text-decoration-none me-2 edit-cert-btn" 
                                           data-id="@cert.Id" 
                                           data-name="@cert.Name"
                                           data-agency="@cert.AgencyId"
                                           data-validity="@cert.ValidityPeriodMonths"
                                           title="Edit Certification">
                                            <i data-lucide="edit" style="width: 18px; height: 18px;"></i>
                                        </a>
                                        <a href="javascript:void(0)" class="text-danger text-decoration-none deactivate-cert-btn" 
                                           data-id="@cert.Id" 
                                           data-name="@cert.Name" 
                                           title="Deactivate Certification">
                                            <i data-lucide="trash-2" style="width: 18px; height: 18px;"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer bg-transparent border-top-0 py-3 mt-3 px-0">
                        <nav aria-label="Page navigation" class="d-flex justify-content-end align-items-center gap-3">
                            <label class="mb-0 text-muted small">
                                Show 
                                <select class="form-select form-select-sm d-inline-block w-auto mx-1 shadow-sm grid-per-page">
                                    <option value="10">10</option>
                                    <option value="25" selected>25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select> entries
                            </label>
                            <ul class="pagination pagination-sm mb-0 grid-pagination">
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

