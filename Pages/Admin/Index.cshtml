@page
@model SeHrCertificationPortal.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Admin Management";
}

<!-- Admin Management Tabs -->
<ul class="nav nav-tabs admin-tabs" id="adminTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="agencies-tab" data-bs-toggle="tab" data-bs-target="#agencies" type="button" role="tab" aria-controls="agencies" aria-selected="true">
            <i data-lucide="building-2" class="me-2" style="width: 18px;"></i> Agencies
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="certifications-tab" data-bs-toggle="tab" data-bs-target="#certifications" type="button" role="tab" aria-controls="certifications" aria-selected="false">
            <i data-lucide="award" class="me-2" style="width: 18px;"></i> Certifications
        </button>
    </li>
</ul>

<div class="tab-content mb-5" id="adminTabsContent">
    <!-- Agency Management Tab -->
    <div class="tab-pane fade show active" id="agencies" role="tabpanel" aria-labelledby="agencies-tab">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                <h5 class="card-title fw-bold mb-0 text-dark">
                    Manage Agencies
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-brand fw-bold">
                        <i data-lucide="download" class="me-1" style="width: 14px;"></i> Export List
                    </button>
                    <button class="btn btn-sm btn-brand fw-bold text-white" data-bs-toggle="modal" data-bs-target="#addAgencyModal">
                        <i data-lucide="plus" class="me-1" style="width: 14px;"></i> Add Agency
                    </button>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="custom-data-grid" id="agencyGridContainer">
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control grid-search-input" placeholder="Search..." style="max-width: 200px;">
                                <button class="btn btn-brand" type="button">
                                    <i data-lucide="search" class="text-white" style="width: 14px;"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0" id="agencyTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3" style="width: 60px;">ID</th>
                                    <th>Name</th>
                                    <th class="text-center" style="width: 170px;">Active Certifications</th>
                                    <th class="text-center" style="width: 100px;">Status</th>
                                    <th class="text-end pe-3" style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Agency) {
                                <tr>
                                    <td class="ps-3 text-muted">@item.Id</td>
                                    <td class="fw-bold">@item.FullName (@item.Abbreviation)</td>
                                    <td class="text-center text-muted">@(item.Certifications.Count) Certifications</td>
                                    <td class="text-center"><span class="badge text-bg-success">Active</span></td>
                                    <td class="text-end pe-3">
                                        <button class="btn btn-sm btn-link text-muted p-0"><i data-lucide="more-horizontal" style="width: 16px;"></i></button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer bg-transparent border-top-0 py-3 mt-3 px-0">
                        <nav aria-label="Page navigation" class="d-flex justify-content-end align-items-center gap-3">
                            <label class="mb-0 text-muted small">
                                Show 
                                <select class="form-select form-select-sm d-inline-block w-auto mx-1 shadow-sm grid-per-page">
                                    <option value="10">10</option>
                                    <option value="25" selected>25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select> entries
                            </label>
                            <ul class="pagination pagination-sm mb-0 grid-pagination">
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Certification Management Tab -->
    <div class="tab-pane fade" id="certifications" role="tabpanel" aria-labelledby="certifications-tab">
        <div class="card shadow-sm">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                 <h5 class="card-title fw-bold mb-0 text-dark">
                    Manage Certifications
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-brand fw-bold">
                        <i data-lucide="download" class="me-1" style="width: 14px;"></i> Export List
                    </button>
                    <button class="btn btn-sm btn-brand fw-bold text-white" data-bs-toggle="modal" data-bs-target="#addCertificationModal">
                        <i data-lucide="plus" class="me-1" style="width: 14px;"></i> Add Certification
                    </button>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="custom-data-grid" id="certGridContainer">
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control grid-search-input" placeholder="Search..." style="max-width: 200px;">
                                <button class="btn btn-brand" type="button">
                                    <i data-lucide="search" class="text-white" style="width: 14px;"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0" id="certTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">Certification Name</th>
                                    <th>Issuing Agency</th>
                                    <th>Validity Period</th>
                                    <th>Requires Renewal?</th>
                                    <th class="text-end pe-3" style="width: 80px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var cert in Model.Certifications) {
                                <tr>
                                    <td class="ps-3 fw-bold">@cert.Name</td>
                                    <td>@(cert.Agency?.Abbreviation ?? "Unknown")</td>
                                    <td>
                                        @if (cert.ValidityPeriodMonths == 0) {
                                            <text>Permanent</text>
                                        } else if (cert.ValidityPeriodMonths % 12 == 0) {
                                            <text>@(cert.ValidityPeriodMonths / 12) Years</text>
                                        } else {
                                            <text>@cert.ValidityPeriodMonths Months</text>
                                        }
                                    </td>
                                    <td>
                                        @if (cert.ValidityPeriodMonths > 0) {
                                            <i data-lucide="check" class="text-success" style="width: 16px;"></i> <text>Yes</text>
                                        } else {
                                            <i data-lucide="x" class="text-muted" style="width: 16px;"></i> <text>No</text>
                                        }
                                    </td>
                                    <td class="text-end pe-3">
                                        <button class="btn btn-sm btn-link text-muted p-0"><i data-lucide="edit-2" style="width: 16px;"></i></button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer bg-transparent border-top-0 py-3 mt-3 px-0">
                        <nav aria-label="Page navigation" class="d-flex justify-content-end align-items-center gap-3">
                            <label class="mb-0 text-muted small">
                                Show 
                                <select class="form-select form-select-sm d-inline-block w-auto mx-1 shadow-sm grid-per-page">
                                    <option value="10">10</option>
                                    <option value="25" selected>25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select> entries
                            </label>
                            <ul class="pagination pagination-sm mb-0 grid-pagination">
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- General Settings -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm border-0 bg-white">
            <div class="card-body py-4">
                <form method="post" asp-page-handler="SaveSettings">
                   <div class="d-flex align-items-center justify-content-between mb-4">
                       <div class="d-flex align-items-center">
                           <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px;">
                               <i data-lucide="settings" class="text-muted"></i>
                           </div>
                           <div>
                               <h5 class="fw-bold mb-1">General Settings</h5>
                               <p class="text-muted small mb-0">Configure system-wide notifications and contacts.</p>
                           </div>
                       </div>
                       <button type="submit" class="btn btn-brand fw-bold px-4">Save Settings</button>
                   </div>
                   
                   <div class="row g-3">
                       <div class="col-md-8 col-lg-9">
                           <label asp-for="AdminEmail" class="form-label fw-bold text-muted small">Admin Email</label>
                           <div class="input-group">
                               <span class="input-group-text bg-light border-end-0"><i data-lucide="mail" style="width: 16px;" class="text-muted"></i></span>
                               <input type="email" asp-for="AdminEmail" class="form-control" placeholder="admin@specializedengineering.com">
                           </div>
                       </div>
                       <div class="col-md-4 col-lg-3">
                           <label asp-for="ExpiringSoonThresholdDays" class="form-label fw-bold text-muted small">Expiring Soon Threshold (Days)</label>
                           <div class="input-group">
                               <span class="input-group-text bg-light border-end-0"><i data-lucide="clock" style="width: 16px;" class="text-muted"></i></span>
                               <input type="number" asp-for="ExpiringSoonThresholdDays" class="form-control" placeholder="30">
                           </div>
                       </div>
                   </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->

<!-- Add Agency Modal -->
<div class="modal fade" id="addAgencyModal" tabindex="-1" aria-labelledby="addAgencyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddAgency">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold" id="addAgencyModalLabel">Add New Agency</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewAgency.Abbreviation" class="form-label fw-bold">Abbreviation/Acronym <span class="text-danger">*</span></label>
                        <input asp-for="NewAgency.Abbreviation" class="form-control" placeholder="e.g. WSSC" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewAgency.FullName" class="form-label fw-bold">Full Name (Optional)</label>
                        <input asp-for="NewAgency.FullName" class="form-control" placeholder="e.g. Washington Suburban Sanitary Commission" />
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-brand text-white fw-bold">Save Agency</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Certification Modal -->
<div class="modal fade" id="addCertificationModal" tabindex="-1" aria-labelledby="addCertificationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddCertification">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold" id="addCertificationModalLabel">Add New Certification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label asp-for="NewCertification.AgencyId" class="form-label fw-bold">Issuing Agency <span class="text-danger">*</span></label>
                        <select asp-for="NewCertification.AgencyId" class="form-select" required>
                            <option value="">-- Select an Agency --</option>
                            @foreach (var agency in Model.Agency)
                            {
                                <option value="@agency.Id">@agency.Abbreviation</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCertification.Name" class="form-label fw-bold">Certification Name <span class="text-danger">*</span></label>
                        <input asp-for="NewCertification.Name" class="form-control" placeholder="e.g. Concrete Technician I" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewCertification.ValidityPeriodMonths" class="form-label fw-bold">Validity Period (Months)</label>
                        <input asp-for="NewCertification.ValidityPeriodMonths" type="number" class="form-control" value="0" min="0" />
                        <div class="form-text">Enter 0 for permanent certifications. Examples: 12 (1 Yr), 36 (3 Yrs).</div>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-brand text-white fw-bold">Save Certification</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
class ClientSideDataGrid {
    constructor(containerId, defaultRowsPerPage = 25) {
        this.container = document.getElementById(containerId);
        if (!this.container) return;

        this.searchInput = this.container.querySelector('.grid-search-input');
        this.perPageSelect = this.container.querySelector('.grid-per-page');
        this.tableBody = this.container.querySelector('table tbody');
        this.rows = Array.from(this.tableBody.querySelectorAll('tr'));
        this.paginationContainer = this.container.querySelector('.grid-pagination');
        
        this.rowsPerPage = defaultRowsPerPage;
        this.currentPage = 1;
        this.filteredRows = [...this.rows];

        // Ensure select dropdown matches default
        if(this.perPageSelect) {
            this.perPageSelect.value = this.rowsPerPage;
        }

        this.init();
    }

    init() {
        if(this.searchInput) {
            this.searchInput.addEventListener('input', (e) => this.filterData(e.target.value));
        }
        if(this.perPageSelect) {
            this.perPageSelect.addEventListener('change', (e) => {
                this.rowsPerPage = parseInt(e.target.value);
                this.currentPage = 1;
                this.render();
            });
        }
        this.render();
    }

    filterData(searchTerm) {
        const term = searchTerm.toLowerCase();
        this.filteredRows = this.rows.filter(row => {
            return row.innerText.toLowerCase().includes(term);
        });
        this.currentPage = 1;
        this.render();
    }

    render() {
        this.rows.forEach(row => row.style.display = 'none');

        const totalPages = Math.ceil(this.filteredRows.length / this.rowsPerPage) || 1;
        
        // Failsafe: if filtering reduces pages below current page
        if (this.currentPage > totalPages) this.currentPage = totalPages;

        const start = (this.currentPage - 1) * this.rowsPerPage;
        const end = start + this.rowsPerPage;

        const pageRows = this.filteredRows.slice(start, end);
        pageRows.forEach(row => row.style.display = '');

        const currentEnd = Math.min(end, this.filteredRows.length);

        this.renderPagination(totalPages);
    }

    renderPagination(totalPages) {
        if(!this.paginationContainer) return;
        let html = '';
        
        // Prev Button
        html += `<li class="page-item ${this.currentPage === 1 ? 'disabled' : ''}">
                    <a class="page-link shadow-sm" href="javascript:void(0)" data-page="${this.currentPage - 1}">&laquo;</a>
                 </li>`;
                 
        // Compact Page Indicator (using brand classes)
        html += `<li class="page-item active">
                    <span class="page-link shadow-sm border-brand bg-brand text-white" style="pointer-events: none;">${this.currentPage} / ${totalPages}</span>
                 </li>`;

        // Next Button
        html += `<li class="page-item ${this.currentPage === totalPages ? 'disabled' : ''}">
                    <a class="page-link shadow-sm" href="javascript:void(0)" data-page="${this.currentPage + 1}">&raquo;</a>
                 </li>`;

        this.paginationContainer.innerHTML = html;

        // Attach click events
        this.paginationContainer.querySelectorAll('a.page-link').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const parentLi = e.target.closest('.page-item');
                if (!parentLi.classList.contains('disabled')) {
                    this.currentPage = parseInt(e.target.getAttribute('data-page'));
                    this.render();
                }
            });
        });
    }
}

document.addEventListener('DOMContentLoaded', function() {
    // Instantiate reusable grids
    new ClientSideDataGrid('agencyGridContainer', 25);
    new ClientSideDataGrid('certGridContainer', 25);

    // Tab State Retention
    var tabElements = document.querySelectorAll('button[data-bs-toggle="tab"]');
    tabElements.forEach(function(tabEl) {
        tabEl.addEventListener('shown.bs.tab', function (event) {
            localStorage.setItem('activeAdminTab', event.target.getAttribute('data-bs-target'));
        });
    });

    var activeTabTarget = localStorage.getItem('activeAdminTab');
    if (activeTabTarget) {
        var tabToActivate = document.querySelector('button[data-bs-target="' + activeTabTarget + '"]');
        if (tabToActivate) {
            new bootstrap.Tab(tabToActivate).show();
        }
    }
});
</script>
}
