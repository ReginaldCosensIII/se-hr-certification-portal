@page
@model SeHrCertificationPortal.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "Admin Settings";
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">General Settings</h3>
            </div>
            <form>
                <div class="card-body">
                    <div class="form-group">
                        <label for="appName">Application Name</label>
                        <input type="email" class="form-control" id="appName" placeholder="Enter application name" value="HR Certification Portal">
                    </div>
                    <div class="form-group">
                        <label for="adminEmail">Admin Email</label>
                        <input type="email" class="form-control" id="adminEmail" placeholder="Enter email" value="admin@speceng.com">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Agency Management</h3>
            </div>
            <div class="card-body">
                <p>Manage certification agencies here.</p>
                <button class="btn btn-info">Manage Agencies</button>
            </div>
        </div>
    </div>
</div>
